	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script>
		$(document).ready(function () {
			// Attach change event handler to the select element
			$("#ServiceId").on('change', function () {
				// Get the value of the select element
				let connectionID = $(this).val();

				// Hide all connection sections
				$("#DailUp, #BroadbandConnection, #LandLineConnection").hide();

				// Show the selected connection section based on the value
				if (connectionID === '1') {
					$("#DailUp").show();
				} else if (connectionID === '2') {
					$("#BroadbandConnection").show();
				} else if (connectionID === '3') {
					$("#LandLineConnection").show();
				}
			});

			// Bind click event handler for the RegisterServices button
			$("#RegisterServices").click(function () {
				event.preventDefault();

				console.log("helow")
				$.ajax({
					type: 'POST',
					url: '/CustomarPannal/ServicesRegistration',
					data: getFormData(),
					success: function (response) {
						// Handle success response here
						console.log(response);
					},
					error: function (xhr, status, error) {
						// Handle error
						console.error(xhr.responseText);
					}
				});
			});
		});

		function getFormData() {
			// Declare formData object
			var formData = {};

			// Retrieve values from input fields by their IDs
			formData.name = $('#inputEmail4').val();
			formData.email = $('#inputPassword4').val();
			formData.phone = $('#inputPassword4').val();
			formData.address = $('#inputAddress').val();
			formData.detailAddress = $('#inputAddress2').val();
			formData.city = $('#inputCity').val();
			formData.serviceId = $('#ServiceId').val();
			formData.zip = $('#inputZip').val();

			// Retrieve values from radio buttons
			formData.hourlyPlan = $('input[name="hourlyPlan"]:checked').val();
			formData.kbpsPlan28 = $('input[name="28kbpsPlan"]:checked').val();
			formData.kbpsPlan56 = $('input[name="56kbpsPlan"]:checked').val();
			formData.broadbandHourlyPlan = $('input[name="broadbandHourlyPlan"]:checked').val();
			formData.kbpsPlan64 = $('input[name="64kbpsPlan"]:checked').val();
			formData.kbpsPlan128 = $('input[name="128kbpsPlan"]:checked').val();
			formData.localPlan = $('input[name="localPlan"]:checked').val();
			formData.stdPlan = $('input[name="stdPlan"]:checked').val();

			// Return formData object
			return formData;
		}
	</script>




